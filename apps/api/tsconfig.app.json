{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      // "*": ["apps/api/src/*"],
      "@auth/*": ["src/api/auth/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@domain/*": ["src/domain/*"]
    },
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
